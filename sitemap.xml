---
layout: null
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
  {%- comment -%} List regular pages (exclude obvious non-content) {%- endcomment -%}
  {% for page in site.pages %}
    {% unless page.name == "404.html" or page.name == "dynamic_inattention.html" %}
      <url>
        <loc>{{ site.url }}{{ page.url | replace: "index.html", "" }}</loc>
        {% if page.date %}
          <lastmod>{{ page.date | date_to_xmlschema }}</lastmod>
        {% else %}
          <lastmod>{{ site.time | date_to_xmlschema }}</lastmod>
        {% endif %}
        <changefreq>monthly</changefreq>
        <priority>0.3</priority>
      </url>
    {% endunless %}
  {% endfor %}

  {%- comment -%} PDFs intentionally omitted from sitemap to prefer HTML slug pages {%- endcomment -%}
</urlset>
